<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <!--타이틀바-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#ff7a00"
            android:gravity="center"
            android:text="5rm을 각각 입력하세요."
            android:textColor="#4A148C"
            android:textSize="18sp" />
    </LinearLayout>
        <!--//end타이틀바-->
    <!--Notice-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_squ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="스쿼트 5rm"
                android:layout_marginStart="-18dp"
                android:layout_marginBottom="3dp"
                android:alpha="0.87"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/input_ben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="벤치프레스 5rm"
                android:layout_marginStart="-18dp"
                android:layout_marginBottom="3dp"
                android:alpha="0.87"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/input_bab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="바벨로우 5rm"
                android:layout_marginStart="-18dp"
                android:layout_marginBottom="3dp"
                android:alpha="0.87"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/input_ove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="오버헤드프레스 5rm"
                android:layout_marginStart="-18dp"
                android:layout_marginBottom="3dp"
                android:alpha="0.87"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/input_dea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="데드리프트 5rm"
                android:layout_marginStart="-18dp"
                android:layout_marginBottom="3dp"
                android:alpha="0.87"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"/>

        </LinearLayout>


    </LinearLayout>

    <!--Notice-->
    <View android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!--닫기버튼-->
    <LinearLayout android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:text="확인"
        android:textSize="15sp"
        android:textColor="#ff7a00"
        android:padding="16dp"
        android:gravity="center"
        android:background="#00000000"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="mNext"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:gravity="center"
        android:padding="16dp"
        android:text="취소"
        android:textColor="#ff7a00"
        android:textSize="15sp"
        android:onClick="mCancel"/>
    </LinearLayout>
    <!--//닫기버튼-->
</LinearLayout>